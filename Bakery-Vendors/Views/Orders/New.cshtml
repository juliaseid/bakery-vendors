@{
  Layout = "_Layout";
}
<div class="container">
  <h2>Add A New Order</h2>
  <div class="well">
    <h4>New Order Details:</h4>
    <form action="/vendors/@Model.Id/orders"  method="post" >
      <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
      <label for="orderDay" > Enter the Day for the Order  </label>
      <input type="text" name="orderDay" id="orderDay" required>
      <label for="orderInvoice"> Enter the Invoice amount for the Order </label>
      <input type="number" name="orderInvoice" id="orderInvoice" placeholder="$" required>
      <button type="submit"> Submit </button>
    </form> 
  </div>
</div>